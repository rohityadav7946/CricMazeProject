<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">CricMaze</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="grouping">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Grouping
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="filtering">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Filtering
            </NavLink>
        </li>

        
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="search">
                <span class="oi oi-circle-check" aria-hidden="true"></span> Searching
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="edit">
                <span class="oi oi-plus" aria-hidden="true"></span> Editing
            </NavLink>
        </li>


    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
